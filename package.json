{
	"name": "meerkat",
	"displayName": "Meerkat",
	"description": "Suricata/Snort VSCode extenssion",
	"author": "Tsvetomir Hristov",
	"license": "MIT",
	"version": "0.1.0",
	"keywords": [
		"lsp",
		"vscode extenssion",
		"language support"
	],
	"engines": {
		"vscode": "^1.71.0"
	},
	"activationEvents": [
		"onLanguage:suricata"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"title": "Meerkat",
			"properties": {
				"meerkat.formatActiveLineOnly": {
					"type": "boolean",
					"default": true,
					"description": "The formatter will only format the rule on the actively selected line."
				},
				"meerkat.formatSpaceAfterOption": {
					"type": "boolean",
					"default": true,
					"description": "Put a space after every option.",
					"examples": [
						"True: ... (msg:\"(...)\"; flow:stateless; (...))",
						"False: ... (msg:\"(...)\";flow:stateless;(...))"
					]
				},
				"meerkat.formatSpaceAfterLastOption": {
					"type": "boolean",
					"default": false,
					"description": "Put a space after the last option.",
					"examples": [
						"True: ... ((...); flow:stateless; )",
						"False: ... ((...); flow:stateless;)"
					]
				},
				"meerkat.formatSpaceAfterSemicolomnInOption": {
					"type": "boolean",
					"default": false,
					"description": "Put a space after the semicolumn inside options.",
					"examples": [
						"True: ... (msg: \"(...)\"; flow:stateless; (...))",
						"False: ... (msg: \"(...)\"; flow: stateless; (...))"
					]
				}
			}
		},
		"commands": [
			{
				"title": "Say hi to Meerkat",
				"command": "meerkat.hello",
				"shortTitle": "Meerkat: Hello world!"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b && cargo build",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd .. && cargo build",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/vscode": "^1.71.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.11.7",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"eslint": "^8.13.0",
		"mocha": "^9.2.1",
		"typescript": "^4.8.4"
	}
}